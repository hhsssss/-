.body {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100vw;
  height: 50vh;
}

.box {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 600rpx;
  height: 600rpx;
  margin-top: 20px;
}

.box .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.box .arrows {
  position: relative;
  top: -28rpx;
  width: 200rpx;
  height: 249rpx;
}

.grayscale {
  filter: grayscale(70%);
}


.input-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.input-row {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin-top: 16px;
}

.input-box {
  width: 45%;
  height: 40rpx;
  border-radius: 4rpx;
  border: 1rpx solid #ccc;
  padding: 10rpx;
}


