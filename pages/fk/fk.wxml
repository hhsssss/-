
<form bindsubmit="formSubmit" >
  <input class="input-style" name="liuyantext" placeholder="    输入建议内容(48字以内)" value="{{inputValue}}"/>
  <button type="primary" form-type="submit" class="btn" style="color: rgba(128, 128, 128, 0.753); font-weight: 800; align-items: center; border-radius: 20px; border: 2px solid rgb(248, 245, 245); background:-webkit-linear-gradient(left,rgb(250, 240, 227),rgb(250, 231, 215),rgb(253, 197, 175));">发送</button>
</form>
<view style="width: 100%;height: 10px"></view>
<view wx:for="{{dataobj}}" wx:key="dataobj" class="box">
  <view style="width: 100%;height: 15px"></view>
  <view class="headimg" style="margin-left: 10px;margin-right: 10px;"><image src="{{item.picurl}}"></image></view>

  <view class="nickname_liuyantext" contenteditable="true">
    <view class="nickname"></view>
    <view class="time" style="margin-left: 50px;color: rgba(128, 128, 128, 0.753);font-size: 12px;">{{item.time}}</view>
    <view class="text" style=" display: flex;flex-direction: column;margin-right: 10px;margin-left: 50px;">{{item.content}}</view>
  </view>
</view>
